<%- unless smart_listing.empty? %>

  <table class="table">
    <thead>
      <tr>
        <th>Person</th>
        <th>Event</th>
        <th>Notes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% smart_listing.collection.each do |attendance| %>
        <tr>
          <td><%= attendance.person %></td>
          <td><%= attendance.event %></td>
          <td><%= attendance.notes %></td>
          <td><%= link_to 'Show', attendance %></td>
          <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
          <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>
  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>

<% else %>
  <p class="warning">No records found</p>
<% end %>
