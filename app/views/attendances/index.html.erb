<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<%= link_to 'New Attendance', new_attendance_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Event</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.person %></td>
        <td><%= attendance.event %></td>
        <td><%= attendance.notes %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
