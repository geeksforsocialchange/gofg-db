<h2><%= t(".title") %></h2>

<p><%= t(".description") %></p>

<div class="row">
  <div class="col-sm-3">

    <%= simple_form_for :password, url: passwords_path do |form| %>
      <div class="form-inputs">
        <%= form.input :email, as: :email %>
      </div>

      <div class="form_actions">
        <%= form.button :submit, class: 'btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
