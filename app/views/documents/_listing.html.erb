<%- unless smart_listing.empty? %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Researcher</th>
        <th>Conducted At</th>
        <th>Location</th>
        <th>Number of Files</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% smart_listing.collection.each do |document| %>
        <tr>
          <td><%= link_to document.name, document_path(document) %></td>
          <td><%= document.researcher %></td>
          <td><%= document.conducted_at.try(:to_date) %></td>
          <td><%= document.location %></td>
          <td><%= document.uploads.count %></td>
          <td><%= link_to 'Show', document %></td>
          <td><%= link_to 'Edit', edit_document_path(document) %></td>
          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>
<% else %>
  <p class="warning">No records found</p>
<% end %>
