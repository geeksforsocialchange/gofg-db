<div class="row">
  <div class="col-sm-3">
    <h2><%= t(".title") %></h2>

    <%= simple_form_for @user do |form| %>
      <%= render partial: '/users/form', object: form %>

      <div class="form-actions">
        <%= form.button :submit, class: 'btn-primary' %>
      </div>

      <br/>

      <div class="other-links">
        <%= link_to t(".sign_in"), sign_in_path %>
      </div>
    <% end %>
  </div>
</div>
