<p id="notice"><%= notice %></p>

<h1><%= t("#{controller_name}.page_title") %></h1>
<%= link_to t("#{controller_name}.new_button"), path_for_new_person, class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Type</th>
      <th>Nicknames</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Is accreditor</th>
      <th>DoB</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.last_name %></td>
        <td><%= person.first_name %></td>
        <td><%= person.type %></td>
        <td><%= person.nicknames %></td>
        <td><%= person.tel %></td>
        <td><%= person.email %></td>
        <td><%= person.is_accreditor %></td>
        <td><%= person.dob %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
