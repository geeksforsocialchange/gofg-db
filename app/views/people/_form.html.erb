<div class="row">
  <div class="col-sm-5 col-md-4">
    <%= simple_form_for(@person) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :nicknames %>
        <%= f.input :tel, label: 'Telephone' %>
        <%= f.input :email %>

        <%- if @person.new_record? %>
          <%= f.input :type, collection: Person.types, prompt: 'Select a type', selected: params[:type] || @person.type %>
        <% end %>

        <%= f.input :twitter, label: 'Twitter handle' %>
        <%= f.input :is_accreditor, as: :boolean %>
        <%= f.input :dob, as: :date %>
        <%= f.input :notes, input_html: {rows: 10} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn-primary' %>
        <%= link_to 'Cancel', people_path, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
