<%- unless smart_listing.empty? %>

  <table class="table">
    <thead>
      <tr>
        <th><%= smart_listing.sortable "Last name", "last_name" %></th>
        <th><%= smart_listing.sortable "First name", "first_name" %></th>
        <th>Type</th>
        <th>Nicknames</th>
        <th>Tel</th>
        <th><%= smart_listing.sortable "Email", "email" %></th>
        <th>Is accreditor</th>
        <th>DoB</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% smart_listing.collection.each do |person| %>
        <tr>
          <td><%= person.last_name %></td>
          <td><%= person.first_name %></td>
          <td><%= person.type %></td>
          <td><%= person.nicknames %></td>
          <td><%= person.tel %></td>
          <td><%= person.email %></td>
          <td><%= person.is_accreditor %></td>
          <td><%= person.dob %></td>
          <td><%= link_to 'Show', person %></td>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
          <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>

<% else %>
  <p class="warning">No records found</p>
<% end %>
