<div class="row">
  <div class="col-sm-4">
    <%= simple_form_for :user_mfa_session, url: user_mfa_session_path do |form| %>
      <div class="form-inputs">
        <p> Please input the current six digit verification code, with no spaces, for <%= current_user.email %> below: </p>
        <%= form.input :code %>
      </div>

      <div class="form-actions">
        <%= form.button :submit, 'Submit', class: 'btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

