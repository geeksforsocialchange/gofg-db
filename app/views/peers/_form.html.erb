<%= simple_form_for(@peer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :participant %>
    <%= f.association :mentor %>
    <%= f.input :peer_start%>
    <%= f.input :peer_end %>
    <%= f.input :notes, input_html: {rows: 10} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
