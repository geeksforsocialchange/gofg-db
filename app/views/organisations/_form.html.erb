<div class="row">
  <div class="col-sm-5 col-md-4">
    <%= simple_form_for(@organisation) do |f| %>

      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :activity, collection: Organisation.activities %>
        <%= f.input :email %>
        <%= f.input :tel %>
        <%= f.input :address_1 %>
        <%= f.input :address_2 %>
        <%= f.input :city %>
        <%= f.input :postcode %>
        <%= f.input :notes, input_html: {rows: 10} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn-primary' %>
        <%= link_to 'Cancel', people_path, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
