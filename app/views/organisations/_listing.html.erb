<%- unless smart_listing.empty? %>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Activity</th>
        <th>Email</th>
        <th>Tel</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% smart_listing.collection.each do |organisation| %>
        <tr>
          <td><%= link_to organisation.name, organisation %></td>
          <td><%= organisation.activity %></td>
          <td><%= organisation.email %></td>
          <td><%= organisation.tel %></td>
          <td><%= organisation.address %></td>
          <td><%= link_to 'Show', organisation %></td>
          <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
          <td><%= link_to 'Destroy', organisation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>

<% else %>
  <p class="warning">No records found</p>
<% end %>
