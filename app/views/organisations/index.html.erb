<p id="notice"><%= notice %></p>

<h1>Organisations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Activity</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.name %></td>
        <td><%= organisation.activity %></td>
        <td><%= organisation.email %></td>
        <td><%= organisation.tel %></td>
        <td><%= organisation.address_1 %></td>
        <td><%= organisation.address_2 %></td>
        <td><%= organisation.city %></td>
        <td><%= organisation.postcode %></td>
        <td><%= organisation.notes %></td>
        <td><%= link_to 'Show', organisation %></td>
        <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
        <td><%= link_to 'Destroy', organisation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

