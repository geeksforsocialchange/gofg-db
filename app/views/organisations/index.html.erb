<div class="row organisations">
  <div class="col-sm-2">
    <h1>Organisations</h1>
  </div>
  <div class="col-sm-3 pull-right">
    <%= smart_listing_controls_for(:organisations) do %>
      <div class="filter input-append form-group">
        <%= text_field_tag :filter, '', class: "search form-control", placeholder: "Search by name or email", autocomplete: "off" %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-2 pull-right">
    <%= link_to "New Organisation", new_organisation_path, class: "btn btn-primary" %>
  </div>
</div>

<%= smart_listing_render(:organisations) %>

<br>

