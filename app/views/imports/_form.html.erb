<div class="row">
  <div class="col-sm-12 col-md-3">
    <%= simple_form_for(@import) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :type, collection: Import.types, label_method: ->(v) { t("imports.#{v[0]}") }, value_method: :first, include_blank: false %>
        <%= f.input :file, as: :file %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn-primary' %>
        <%= link_to 'Cancel', imports_path, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
