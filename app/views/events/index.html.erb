<p id="notice"><%= notice %></p>

<h1><%= t("#{controller_name}.page_title") %></h1>
<%= link_to t("#{controller_name}.new_button"), path_for_new_event, class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Event start</th>
      <th>Event duration</th>
      <th>Event type</th>
      <th>Location</th>
      <th>Other attendees</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= event.type %></td>
        <td><%= event.event_start.to_date %></td>
        <td><%= event.duration %> hours</td>
        <td><%= event.event_type %></td>
        <td><%= event.location %></td>
        <td><%= event.other_attendee_count %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
