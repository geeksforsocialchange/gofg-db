<div class="row">
  <div class="col-sm-5 col-md-4">
    <%= simple_form_for(@event) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :event_start, as: :datetime %>
        <%= f.input :event_end, as: :datetime %>
        <%= f.input :event_type %>
        <%= f.input :location %>
        <%= f.input :notes, input_html: {rows: 10} %>
        <%= f.input :other_attendee_count, as: :integer %>

        <%- if @event.new_record? %>
          <%= f.input :type, collection: Event.types, prompt: 'Select a type', selected: params[:type] || @event.type %>
        <% end %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn-primary' %>
        <%= link_to 'Cancel', people_path, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
